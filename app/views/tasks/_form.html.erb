<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'お仕事' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'その状況' %>
  <%= f.text_field :status %>

  <%= f.submit '入力・修正' %>
<% end %>